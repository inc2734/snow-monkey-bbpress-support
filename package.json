{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "dependencies": {
    "sass-basis": "^9.2.13"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-loader": "^8.0.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "cpy-cli": "^2.0.0",
    "cssnano": "^4.1.10",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "autoprefixer": "^9.5.1",
    "rimraf": "^2.6.3",
    "run-sequence": "^2.2.1"
  },
  "scripts": {
    "clean:css": "rimraf assets/css && mkdir -p assets/css",
    "clean:js": "rimraf assets/js && mkdir -p assets/js",
    "clean:zip": "rimraf snow-monkey-bbpress-support.zip",
    "css:bbpress": "node-sass src/css/bbpress.scss assets/css/bbpress.min.css && postcss assets/css/bbpress.min.css -r -c=postcss.config.js",
    "css": "npm run clean:css && npm-run-all -p css:*",
    "js:app": "webpack src/js/app.js -o assets/js/app.min.js --config webpack.config.js",
    "js": "npm run clean:js && npm-run-all -p js:*",
    "build": "npm-run-all -p css js",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.ruleset.xml' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='/bin' --exclude='/tests' --exclude='package*.json' . snow-monkey-bbpress-support && cd snow-monkey-bbpress-support && composer install --no-dev",
    "zip:archive": "zip -9 -qmr snow-monkey-bbpress-support.zip snow-monkey-bbpress-support",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  }
}

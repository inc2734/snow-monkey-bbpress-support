      "homepage": "https://2inc.org"
    }
  ],
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*",
    "phpunit/phpunit": "^5.7"
  },
  "require": {
    "php": ">=5.6",
    "miya/gh-auto-updater": "^1.0"
  },
  "scripts" :{
    "test": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
      "vendor/bin/phpcs -p -s -v -n . --standard=./phpcs.ruleset.xml --extensions=php",
      "bash bin/phpunit.sh"
    ],
    "wpphpunit": "bash bin/wpphpunit.sh",
    "phpunit": "bash bin/phpunit.sh"
  },
  "autoload": {
    "psr-4": {
      "Snow_Monkey\\Plugin\\bbPressSupport\\": ""
    }
  }
}
